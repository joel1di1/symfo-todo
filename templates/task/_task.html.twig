<li id="task_{{ task.id }}" class="py-4">
    <div class="flex items-center">
        <form action="{{ path('app_task_complete', {'id': task.id, 'action': task.completed ? 'uncomplete' : 'complete'}) }}" method="POST">
            <button type="submit"
                class="peer h-5 w-5 cursor-pointer transition-all appearance-none rounded shadow hover:shadow-md border border-slate-300">
                {% if task.completed %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414L8.414 15l-4.707-4.707a1 1 0 011.414-1.414L8.414 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                {% endif %}
            </button>
        </form>

        <label for="todo1" class="ml-3 block text-gray-900 flex justify-between w-full">
            <span class=" block text-lg font-medium">{{ task.title }}</span>
            <span class="block  text-sm font-light text-gray-500">{{ task.dueDate|date("Y-m-d") }}</span>
        </label>
    </div>
</li>
